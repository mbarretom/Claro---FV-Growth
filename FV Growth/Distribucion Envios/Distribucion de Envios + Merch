-- DistribuciÃ³n de Envios (TCM) todos los canales menos Inapp
	SELECT 
	B.PRODUCT, 
	COUNT(DISTINCT B.NEMOTECNIA||TRUNC(A.FECHA)||TELE_NUMB) AS ENVIOS,
	COUNT(DISTINCT TELE_NUMB) AS USUARIOS_UNICOS
	FROM VW_TBL_FACT_AUT_TCM  A
	JOIN GROWTH_CAMPAIGN_OPTION B 
	ON A.NEMOTECNIA = B.NEMOTECNIA
	WHERE TRUNC(A.FECHA) >= DATE '2025-09-01'  
	AND A.BAN_AUTORIZACION_ENVIO = 'SI'
	AND B.MESSAGE_TYPE = 'COMERCIAL' -- CAMBIAR SI ES SERVICIO CON 'NOTIFICACION'
	--AND B.SEGMENT = 'POSPAGO' -- CAMBIAR SEGMENTO POR PREPAGO, POSPAGO, HOGAR
	GROUP BY 1 

-- ENVIOS DE MERCHANTS

  	SELECT 
  	B.CAMPAIGN_TYPE , 
  	COUNT(DISTINCT B.NEMOTECNIA||TRUNC(A.SENT_AT)||TELE_NUMB) AS ENVIOS,
  	COUNT(DISTINCT TELE_NUMB) AS USUARIOS_UNICOS
  	FROM SENT_CAMPAIGNS_LOG   A
  	JOIN GROWTH_CAMPAIGN_OPTION B 
  	ON A.NEMOTECNIA = B.NEMOTECNIA
  	WHERE TRUNC(A.SENT_AT) >= DATE '2025-09-01'
  	--AND TRUNC(A.SENT_AT) < DATE '2025-09-01'	
  	AND B.MESSAGE_TYPE = 'COMERCIAL' CAMBIAR SI ES SERVICIO CON 'NOTIFICACION'
  	AND B.CAMPAIGN_TYPE  = 'MERCHANTS' 
  	AND B.SEGMENT = 'PREPAGO' -- CAMBIAR SEGMENTO POR PREPAGO, POSPAGO, HOGAR
  	GROUP BY 1 


-- ENVIOS EMAIL
	
SELECT  COUNT(DISTINCT E.NEMOTECNIA||TRUNC(A.SENT_AT)||TELE_NUMB) AS ENVIOS,
  	   COUNT(DISTINCT TELE_NUMB) AS USUARIOS_UNICOS
       FROM  INNOVACION.SENT_CAMPAIGNS_LOG_EMAIL A
       JOIN  GROWTH_CAMPAIGN_OPTION E
       ON   A.NEMOTECNIA = E.NEMOTECNIA
       WHERE  TRUNC(A.SENT_AT) >= DATE '2025-09-01'
       AND   A.CONTROL_GROUP = 'N'
       AND   E.MESSAGE_TYPE = 'COMERCIAL' -- CAMBIAR SI ES SERVICIO CON 'NOTIFICACION'
       AND   A.TELE_NUMB IS NOT NULL
       AND   RIGHT(A.TELE_NUMB,10) BETWEEN '3000000000' AND '3999999999'	
